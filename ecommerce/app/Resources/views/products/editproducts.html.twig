{% extends 'base.html.twig' %}

{% block body %}

    

    <div class="panel panel-default">
        <div class="panel-heading">edicion de productos</div>
        <div class="panel-body">

            <form id="editproducts">
              
       <input type="hidden" name="id" value="{{products.id}}">
   
                <div class="form-group">
                    <label for="">Codigo:</label>
                    <input type="text" class="form-control" name="code" id="codigoE" value="{{products.code}}">
                </div>
                <div class="form-group">
                    <label for="">Nombre:</label>
                    <input type="text" class="form-control" name="name" id="NombreE" value="{{products.name}}">
                </div>
                <div class="form-group">
                    <label for="">Descripcion</label>
                    <textarea class="form-control rounded-0" name="description" id="descripcionE" rows="3">
                        {{products.description}}
                    </textarea>
                </div>

                    <div class="form-group">
                    <label for="">Marca</label>
              <input type="text" class="form-control" name="brand" id="PmarcaE" value="{{products.brand}}">
                        </div>
                    
                   <div class="form-group">
                 <label for="">precio:</label>
                 <input type="text" class="form-control" name="price" id="PpriceE" value="{{products.price}}">
               </div>     
                </div>
             
            </form>    

        </div>
    </div>
{% endblock %}

